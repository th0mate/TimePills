{% extends 'base.html.twig' %}

{% block page_title %}
    TimePills | Connexion
{% endblock %}

{% block cssSupplementaire %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/inscription.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/formulaires.css') }}">
{% endblock %}


{% block page_content %}
    <div class="onglet1">
        <h1>Connexion</h1>
    </div>

    <div class="wrapTop">
        <img class="illu" src="{{ asset('img/signin.png') }}" alt="">

        <div>
            <h2 class="redText">Bonjour üëã !</h2>
            <h2>Re-bienvenue sur <span class="redText">TimePills</span>, l'outil de rappel des m√©dicaments du quotidien ! </h2>
            <h4 class="light"><span class="redText">Connectez-vous</span> pour acc√©der √† votre espace, et g√©rer vos m√©dicaments pour recevoir des notifications de rappel !</h4>
        </div>
    </div>

    <form action="{{ path('connexion') }}" method="post">
        <div class="inputbox">
            <input class="input" placeholder=" " id="login" type="email" name="_username" required minlength="4"/>
            <label for="login">Adresse mail</label>
            <img class="success" src="{{ asset('img/success.png') }}" alt="">
            <img class="error" src="{{ asset('img/danger.png') }}" alt="">
